{
  "name": "information-flow-live-preview",
  "version": "0.1.0",
  "description": "Live preview server for Information Flow models with hot reload",
  "main": "dist/server/index.js",
  "bin": {
    "ift-live": "dist/server/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "vite build && tsc -p tsconfig.server.json",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite --port 5173",
    "dev:server": "tsx watch src/server/index.ts",
    "start": "node dist/server/index.js",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "keywords": [
    "event-modeling",
    "information-flow",
    "live-preview",
    "hot-reload"
  ],
  "author": "Sebastian Bortz <sebastianbortz@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/node": "^22.10.0",
    "concurrently": "^9.2.1",
    "svelte": "^5.48.0",
    "svelte-check": "^4.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^7.3.1"
  }
}
